<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.users.user_avatar_size) %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.image if micropost.image.attached? %>
  </span>
  <span class="timestamp"><%= t "microposts.posted" %><%= time_ago_in_words micropost.created_at  %><%= t "microposts.ago" %></span>
  <% if current_user? micropost.user %>
    <%= link_to t("microposts.delete"), micropost, data: { "turbo-method": :delete, turbo_confirm: t("sure") } %>
  <% end %>
</li>
