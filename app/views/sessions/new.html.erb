<% provide :title, t("log_in") %>
  <h1><%= t "login" %></h1>
  <div class="row">
    <div>
      <%= form_for :session, url: login_path do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
        <%= f.submit t("login") , class: "btn-submit" %>
      <% end %>
      <p>
        <%= t "new_user?" %>
        <%= link_to t("users.sign_up"), signup_path %>
      </p>
    </div>
  </div>
