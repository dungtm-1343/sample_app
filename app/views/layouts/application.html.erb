<!DOCTYPE html>
<html>

<head>
  <title>
    <%= full_title yield :title %>
  </title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track"=> "reload" %>
  <%= stylesheet_link_tag yield(:scss), media: "all", "data-turbolinks-track"=> "reload" if content_for?(:scss)
    %>
  <%= javascript_importmap_tags %>
</head>

<body>
  <div class="main">
    <header class="navbar">
      <div class="navbar-container">
        <span class="navbar-logo">
          <%= link_to t("logo"), "/", id: "Logo" %>
            <%= link_to t "en", locale: :en %>
              <%= link_to t "vn", locale: :vi %>
        </span>
        <nav class="navbar-nav">
          <ul>
            <li>
              <%= link_to t("link_home"), "/" %>
            </li>
            <li>
              <%= link_to t("link_contacts"), "/contact" %>
            </li>
            <li>
              <%= link_to t("link_microposts"), "/microposts" %>
            </li>
          </ul>
        </nav>
      </div>
    </header>
    <div class="container">
      <div class="content">
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>">
        <%= message %></div><% end %>
        <%= yield %>
      </div>
    </div>
  </div>
</body>

</html>
